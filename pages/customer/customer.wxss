/* pages/test/test.wxss */

.customer-item {
  height: 90rpx;
  padding: 0 20rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e2e6ed;
  background: #fff;
  border: none;
  outline: none;
}

.customer-item .label {
  display: inline-block;
  width: 150rpx;
  font-size: 32rpx;
  color: #333;
  text-align: left;
}

.customer-item .label-unit {
  float: right;
  font-size: 28rpx;
  color: #333;
}

.customer-item .choose {
  position: relative;
  float: right;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.customer-item .choose i {
  position: absolute;
  top: 40rpx;
  right: -30rpx;
  width: 12rpx;
  height: 12rpx;
  border-right: 1px solid #999;
  border-top: 1px solid #999;
  transform: rotate(45deg);
}

.detail-address {
  width: 100%;
  height: 140rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: none;
  border-bottom: 1px solid #e2e6ed;
  background: #fff;
}

.customer-item input, picker{
  display: inline-block;
  height: 92%;
  font-size: 28rpx;
  color: #333;
  vertical-align: middle;
}

.add-customer .upload {
  height: 90rpx;
  margin: 60rpx 20rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  background: #fe9e02;
  text-align: center;
}
